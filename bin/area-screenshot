#!/bin/sh
wp=$(xdotool getmouselocation | awk '{print $NF}' | cut -c 8-)
name=$(cat /proc/$(xdotool getwindowpid $wp)/comm)
echo $name

if [[ "$name" == "zoom" ]]
then
    maim --select | tee /home/soumyadeep/documents/1-tuition/ayan/ss/$(date +"%d-%b-%Y--%H:%M:%S").png | xclip -selection clipboard -t image/png
else
    maim --select | tee /home/soumyadeep/pictures/ss/$(date +"%d-%b-%Y--%H:%M:%S").png| xclip -selection clipboard -t image/png
fi
notify-send "Screenshot saved"
